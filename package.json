{
	"name": "shido",
	"version": "1.1.0",
	"description": "System-wide AI prompts manager for Claude Code, Gemini CLI, Copilot, Cursor and more with per-project rules and seamless AI tool integration",
	"main": "dist/index.js",
	"bin": {
		"shido": "dist/cli.js"
	},
	"scripts": {
		"build": "tsc",
		"dev": "tsc --watch",
		"start": "node dist/cli.js",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:coverage": "jest --coverage",
		"lint": "tsc --noEmit",
		"prepack": "npm run build",
		"prepublishOnly": "npm run test && npm run build",
		"clean": "rm -rf dist"
	},
	"keywords": [
		"ai",
		"prompts",
		"claude",
		"gemini",
		"copilot",
		"cursor",
		"cli",
		"global",
		"productivity",
		"ai-tools",
		"coding-assistant",
		"prompt-management",
		"developer-tools",
		"automation",
		"symlinks",
		"integration"
	],
	"author": "Your Name <your.email@example.com>",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/yourusername/shido.git"
	},
	"bugs": {
		"url": "https://github.com/yourusername/shido/issues"
	},
	"homepage": "https://github.com/yourusername/shido#readme",
	"preferGlobal": true,
	"engines": {
		"node": ">=14.0.0"
	},
	"dependencies": {
		"commander": "^11.0.0",
		"chalk": "^4.1.2",
		"inquirer": "^8.2.5",
		"fs-extra": "^11.1.1",
		"yaml": "^2.3.2",
		"glob": "^10.3.3",
		"cosmiconfig": "^8.2.0"
	},
	"devDependencies": {
		"@types/node": "^20.4.5",
		"@types/inquirer": "^8.2.6",
		"@types/fs-extra": "^11.0.1",
		"typescript": "^5.1.6",
		"jest": "^29.6.1",
		"@types/jest": "^29.5.3",
		"ts-jest": "^29.1.1"
	},
	"files": [
		"dist",
		"README.md",
		"LICENSE"
	]
